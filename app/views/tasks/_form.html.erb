<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-4">Edit Task</h2>

      <%= form_with model: @task, local: true do |form| %>

        <!-- Title Field -->
        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter task title" %>
        </div>

        <!-- Details Field -->
        <div class="mb-3">
          <%= form.label :details, class: "form-label" %>
          <%= form.text_area :details, class: "form-control", placeholder: "Enter task details" %>
        </div>

        <!-- Completed Checkbox -->
        <div class="form-check mb-3">
          <%= form.check_box :completed, class: "form-check-input" %>
          <%= form.label :completed, class: "form-check-label" %>
        </div>

        <!-- Submit Button -->
        <div class="mt-4">
          <%= form.submit "Save Task", class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
