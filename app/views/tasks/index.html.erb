<h1 class="mb-4 text-center">My Tasks</h1>

<div class="container">
  <% @tasks.each do |task| %>
    <div class="card mb-3 shadow-sm">
      <div class="card-body d-flex align-items-center justify-content-between">

        <!-- Task Completion Icon -->
        <div class="me-3">
          <% if task.completed? %>
            <i class="fa-regular fa-square-check text-success fs-4"></i>
          <% else %>
            <i class="fa-regular fa-square text-secondary fs-4"></i>
          <% end %>
        </div>

        <!-- Task Title -->
        <div class="flex-grow-1">
          <%= link_to task.title, task_path(task), class: "text-decoration-none text-dark fs-5" %>
        </div>

        <!-- Delete Button -->
        <div>
          <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Add New Task Button -->
  <div class="text-center mt-4">
    <%= link_to "Add a new task", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
