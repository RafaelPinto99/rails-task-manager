<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-3">Task Details</h2>

      <!-- Task Details Text -->
      <p class="card-text fs-5"><%= @task.details %></p>

      <!-- Edit and Back Buttons -->
      <div class="d-flex gap-3 mt-4">
        <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-warning" %>
        <%= link_to "Back to list", tasks_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
